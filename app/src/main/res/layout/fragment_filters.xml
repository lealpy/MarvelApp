<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding">

    <RadioGroup
        android:id="@+id/sort_by_radio_group"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:checked="false"
        android:dividerPadding="@dimen/dimen_16_dp"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/sortByAlphabetBtn"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/filters_sort_by_alphabet" />

        <RadioButton
            android:id="@+id/sortByDateBtn"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/filters_sort_by_date" />

        <RadioButton
            android:id="@+id/sortByAlphabetDescendingBtn"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/filters_sort_by_alphabet_descending" />

        <RadioButton
            android:id="@+id/sortByDateDescendingBtn"
            style="@style/RadioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/filters_sort_by_date_descending" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
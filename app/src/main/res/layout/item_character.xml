<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/characterItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/characterItemName"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16_dp"
        android:textSize="@dimen/dimen_24_sp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toTopOf="@id/characterItemImage"
        app:layout_constraintStart_toEndOf="@id/characterItemImage"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="A-Bomb (HAS)"/>

    <TextView
        android:id="@+id/characterItemDescription"
        android:layout_width="@dimen/dimen_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:textSize="@dimen/dimen_12_sp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintTop_toBottomOf="@id/characterItemName"
        app:layout_constraintStart_toStartOf="@id/characterItemName"
        app:layout_constraintEnd_toEndOf="@id/characterItemName"
        tools:text="Rick Jones has been Hulk's best bud since day one, but now he's more than a friend...he's a teammate! Transformed by a Gamma energy ex..."/>


</androidx.constraintlayout.widget.ConstraintLayout>